<script type="text/javascript">
    var slideUp = new SlideRoll({
        carrier:{
            space:'#demo ul',
            content: "li"
        },
        animationType:"up"
    });

jQuery("#slideUp").click(function(){
    slideUp.onChange("up");
});

jQuery("#slideDown").click(function(){
    slideUp.onChange("down");
});

